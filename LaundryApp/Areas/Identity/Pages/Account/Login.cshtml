@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutBlank"; // Layout kosong untuk login
}

<style>
    body {
        background: url('/images/laundry-bg.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .login-card {
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.85);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .brand-title {
        font-size: 1.8rem;
        font-weight: bold;
        color: #007BFF;
        text-align: center;
        margin-bottom: 1rem;
    }
</style>

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="login-card" style="width: 100%; max-width: 400px;">
        <div class="brand-title">LaundryKuy.com</div>
        <h3 class="text-center mb-4">@ViewData["Title"]</h3>

        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-3">Log In</button>

        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
